#include <iostream>
using namespace std;
int main(){
    int N;
    cin>>N;
    for(int i=1;i<=N;i++){
        int k = 2,h = 1;
        for(int j = 1;j<=i;j++){
            if(i%2==0){
                cout<<k;k+=2;
            }
            else{
                cout<<h;h+=2;
            }
            cout<<" ";
        }
        cout<<endl;
    }
	return 0;
}
